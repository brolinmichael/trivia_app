<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="9dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkBlue">
                <TextView
                    android:id="@+id/tvGameNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="14dp"
                    android:paddingVertical="8dp"
                    android:text="GAME:1"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="14dp"
                    android:paddingVertical="8dp"
                    android:textStyle="bold"
                    android:text="15 March 2021"
                    android:layout_toRightOf="@id/tvGameNo"
                    android:textColor="@color/white" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textSize="14dp"
                android:layout_marginTop="16dp"
                android:text="Name : Brolin"
                android:textStyle="bold"
                android:layout_below="@id/rl_header"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvQuestionOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textSize="14dp"
                android:text="Who is the best cricketer in the world?"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tvName"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvCricketer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textSize="14dp"
                android:text="Sachin"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tvQuestionOne"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvQuestionTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textSize="14dp"
                android:text="What are the colours in the national flag?"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tvCricketer"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textSize="14dp"
                android:text="Red"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tvQuestionTwo"
                android:textColor="@color/black" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>